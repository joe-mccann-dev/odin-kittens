<%= form_with(model: @kitten) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "A cute name" %>

  <%= f.label :age, "Age in Months" %>
  <%= f.number_field :age, in: 1..12%>

  <%= f.label :cutness %>
  <%= f.range_field :cuteness, in: 1..10, step: 1 %>

  <%= f.label :softness %>
  <%= f.range_field :softness, in: 1..10, step: 1 %>

  <%= f.submit "Submit" %>
<% end %>
